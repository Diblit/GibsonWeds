<!--Add Guest Modal-->
<div id="modalAddRegistry" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <p class="p-custom-heading">Registry Item</p>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6">
                            <div class="">
                                <label for="" class="control-label fw600">Gift Url/Name: <span class="text-danger">*</span></label>
                                <input type="text" id="tbRegistryGiftNameAdd" class="form-control input-sm" placeholder="" value="" onchange="" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <div class="clearfix text-center">
                    <label class="text-danger" id="lblErrorRegistryAdd"></label>
                </div>
                <a href="javascript:;" class="btn btn-primary" onclick="SaveRegistryAdd()">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;|&nbsp;Save
                </a>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>

    </div>
</div>

